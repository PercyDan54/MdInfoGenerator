<UserControl x:Class="MdInfoGenerator.LabelledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MdInfoGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="Label" HorizontalAlignment="Left" Height="25" Margin="0,5,0,0" VerticalAlignment="Top" Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBox x:Name="TextBox" MinWidth="150" Height="25" TextWrapping="Wrap" Margin="15,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
